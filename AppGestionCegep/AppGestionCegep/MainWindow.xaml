                    </Grid>
                    <ListBox Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="92,91,0,0" VerticalAlignment="Top" Width="100"/>



                </Grid>
            </TabItem>
            <TabItem Header="Onglet 2" >
                <Grid Background="#FFE5E5E5" Margin="201,144,993,588">
                    <ListBox HorizontalAlignment="Left" Height="100" Margin="108,127,0,0" VerticalAlignment="Top" Width="100"/>
                </Grid>


            </TabItem>
        </TabControl>


    </Grid>




</Window>
